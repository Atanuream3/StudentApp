<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"


    tools:context="com.example.asmita.absent_form.ChangePassword">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
        android:layout_width="178dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/absence"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <EditText
        android:layout_marginTop="44dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:id="@+id/currentpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="50"
        android:textColorHint="#424242"
        android:hint="Cureent Password"
        android:inputType="textPassword"
        android:layout_marginLeft="35dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_marginTop="32dp"
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="50"
        android:textColorHint="#424242"
        android:hint="New Password"
        android:inputType="textPassword"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/currentpass"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_marginTop="33dp"
        android:id="@+id/retypepass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="50"
        android:textColorHint="#424242"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/newpassword"/>

    <Button
        android:id="@+id/submitpass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#2582C5"
        android:text="submit"
        android:textColor="#FFFFFF"
        android:layout_weight="0.24"
        android:onClick="submit"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />

    </LinearLayout>

</ScrollView>


    </RelativeLayout>
